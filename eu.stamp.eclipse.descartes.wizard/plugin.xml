<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.stamp.wp4.descartes.wizard.execution.DescartesWizardHandler"
            id="eu.stamp.wp4.descartes.wizard.command"
            name="OpenDescartesWizard">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               id="stamp.menu.package"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="eu.stamp.wp4.descartes.wizard.definition">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               id="stamp.menu.project"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="eu.stamp.wp4.descartes.wizard.definition">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="stamp.menu.main"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="eu.stamp.wp4.descartes.wizard.definition">
         <adapt
               type="org.eclipse.core.resources.IProject">
            <test
                  property="org.eclipse.core.resources.projectNature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </test>
         </adapt>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="eu.stamp.wp4.descartes.wizard.command"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="eu.stamp.wp4.descartes.wizard.execution.DescartesDelegate"
            id="eu.stamp.wp4.descartes.wizard.launchConfiguration"
            modes="run,debug"
            name="Descartes"
            sourceLocatorId="org.eclipse.m2e.launching.MavenSourceLocator"
            sourcePathComputerId="org.eclipse.m2e.launching.MavenSourceComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="eu.stamp.wp4.descartes.wizard.launch.ui.DescartesLaunchConfigurationTabGroup"
            id="eu.stamp.wp4.descartes.wizard.launchConfigurationTabGroup"
            type="eu.stamp.wp4.descartes.wizard.launchConfiguration">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="eu.stamp.category"
            name="STAMP">
      </category>
      <view
            category="eu.stamp.category"
            class="eu.stamp.wp4.descartes.view.DescartesView"
            id="eu.stamp.wp4.descartes.view.DescartesView"
            inject="true"
            name="Descartes view"
            restorable="true">
      </view>
   </extension>

</plugin>
