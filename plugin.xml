<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.stamp.wp4.descartes.wizard.execution.DescartesWizardHandler"
            id="eu.stamp.wp4.descartes.wizard.command"
            name="OpenDescartesWizard">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               id="DSpot.menu1"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="eu.stamp.wp4.descartes.wizard.definition">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               id="DSpot.menu2"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="eu.stamp.wp4.descartes.wizard.definition">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="DSpot.menu3"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.descartes.wizard.command"
                  label="Descartes"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="eu.stamp.wp4.descartes.wizard.definition">
         <adapt
               type="org.eclipse.core.resources.IProject">
            <test
                  property="org.eclipse.core.resources.projectNature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </test>
         </adapt>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="eu.stamp.wp4.descartes.wizard.command"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
   </extension>

</plugin>
