<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.stamp.eclipse.plugin.dspot.handler.DSpotWizardHandler"
            name="Open Dspot Wizard"
            id="eu.stamp.wp4.dspot.menu.wizard.command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               commandId="eu.stamp.wp4.dspot.menu.wizard.command"
               id="stamp.menu.package"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.dspot.menu.wizard.command"
                  label="DSpot"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="com.dspot.menu.wizard.hasNature">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
         <menu
               commandId="eu.stamp.wp4.dspot.menu.wizard.command"
               id="stamp.menu.project"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.dspot.menu.wizard.command"
                  label="DSpot"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <reference
                           definitionId="com.dspot.menu.wizard.hasNature">
                     </reference>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               commandId="eu.stamp.wp4.dspot.menu.wizard.command"
               id="stamp.menu.main"
               label="STAMP">
            <command
                  commandId="eu.stamp.wp4.dspot.menu.wizard.command"
                  label="DSpot"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="DSpot.runtime.apliction"
         name="DSpot Runtime Aplication"
         point="org.eclipse.core.runtime.applications">
      <application
            thread="main"
            cardinality="singleton-global"
            visible="true">
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.dspot.menu.wizard.hasNature">
         <adapt
               type="org.eclipse.core.resources.IProject">
            <test
                  property="org.eclipse.core.resources.projectNature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </test>
         </adapt>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="eu.stamp.wp4.dspot.menu.wizard.command"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.m2e.internal.launch.MavenLaunchDelegate"
            id="eu.stamp.dspot.configuration"
            modes="run,debug"
            name="DSpot Execution"
            sourceLocatorId="org.eclipse.m2e.launching.MavenSourceLocator"
            sourcePathComputerId="org.eclipse.m2e.launching.MavenSourceComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="STAMP"
            class="eu.stamp.eclipse.plugin.dspot.view.DSpotView"
            id="eu.stamp.eclipse.dspot.reports.view"
            name="DSpot view"
            restorable="true">
      </view>
   </extension>
</plugin>
